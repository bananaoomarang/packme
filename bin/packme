#!/usr/bin/env node

var Path = require('path');
var Fs   = require('fs');

var argv = require('yargs')
  .usage('Usage: packme <package> <infrom> <outto>')
  .demand(3)
  .argv;

var package = argv._[0];
var infrom  = argv._[1];
var outto   = argv._[2];

var pkgdir  = Path.join(process.cwd(), package);

var _in = require(Path.join(process.cwd(), 'ins',  infrom))
var out = require(Path.join(process.cwd(), 'outs', outto));

_in(package)
  .then(out)
  .then(function (result) {
      console.log(result);
  });
